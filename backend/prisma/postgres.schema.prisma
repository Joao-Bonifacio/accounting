generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  output   = "./generated/postgres"
}

datasource postgres {
  provider = "sqlite"
  url      = env("POSTGRES_URL")
}

enum Level {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}

enum Role {
  USER
  PRO
  PREMIUM
  ADMIN
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  nickname String @unique
  password String
  level    Level  @default(BRONZE)
  role     Role   @default(USER)
  avatar   String?

  @@map("users")
}
